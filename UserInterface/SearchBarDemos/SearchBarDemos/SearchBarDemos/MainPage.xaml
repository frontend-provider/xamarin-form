<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:SearchBarDemos"
             mc:Ignorable="d"
             x:Class="SearchBarDemos.MainPage"
             Padding="10"
             Title="SearchBar Demos">

    <TableView Intent="Menu">
        <TableRoot>
            <TableSection>
                <TextCell Text="SearchBar XAML"
                          Detail="XAML SearchBar that searches upon request"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type local:SearchBarXamlPage}" />
                <TextCell Text="Realtime SearchBar XAML"
                          Detail="XAML SearchBar that filters results in realtime"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type local:SearchBarRealtimeXamlPage}" />
                <TextCell Text="SearchBar Code"
                          Detail="Code SearchBar that searches upon request"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type local:SearchBarCodePage}" />
                <TextCell Text="Realtime SearchBar Code"
                          Detail="Code SearchBar that filters results in realtime"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type local:SearchBarRealtimeCodePage}" />

            </TableSection>
        </TableRoot>
    </TableView>

</ContentPage>
