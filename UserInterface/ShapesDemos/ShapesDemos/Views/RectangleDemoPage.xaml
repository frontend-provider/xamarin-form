<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShapesDemos.RectangleDemoPage"
             Title="Rectangle demos">
    <ScrollView>
        <StackLayout Margin="20">
            <Label Text="Filled rectangle" />
            <Rectangle Fill="Red"
                       WidthRequest="150"
                       HeightRequest="50"
                       HorizontalOptions="Start" />
            <Label Text="Square" />
            <Rectangle Stroke="Red"
                       StrokeThickness="4"
                       WidthRequest="150"
                       HeightRequest="150"
                       HorizontalOptions="Start" />
            <Label Text="Rectangle with stroke" />
            <Rectangle Stroke="Red"
                       StrokeThickness="4"
                       WidthRequest="150"
                       HeightRequest="50"
                       HorizontalOptions="Start" />
            <Label Text="Filled rectangle with stroke" />
            <Rectangle Fill="DarkBlue"
                       Stroke="Red"
                       StrokeThickness="4"
                       WidthRequest="150"
                       HeightRequest="50"
                       HorizontalOptions="Start" />
            <Label Text="Filled rectangle with dashed stroke" />
            <Rectangle Fill="DarkBlue"
                       Stroke="Red"
                       StrokeThickness="4"
                       StrokeDashArray="1,1"
                       StrokeDashOffset="6"
                       WidthRequest="150"
                       HeightRequest="50"
                       HorizontalOptions="Start" />
            <Label Text="Rectangle with curved corners" />
            <Rectangle Fill="DarkBlue"
                       RadiusX="12"
                       RadiusY="24"
                       WidthRequest="150"
                       HeightRequest="50"
                       HorizontalOptions="Start" />
        </StackLayout>
    </ScrollView>
</ContentPage>
