<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:BindingContextChanged"
             mc:Ignorable="d"
             x:Class="BindingContextChanged.MainPage"
             Padding="10"
             Title="ListView BindingContextChanged Demo">
    <TableView Intent="Menu">
        <TableRoot>
            <TableSection>
                <TextCell Text="BindingContextChanged XAML Demo"
                          Detail="Demonstrates handling BindingContextChanged in XAML."
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type local:ListPage}" />
                <TextCell Text="BindingContextChanged Code Demo"
                          Detail="Demonstrates handling BindingContextChanged in code."
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type local:ListPageCS}" />
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>