		<ScrollView>
			<AbsoluteLayout BackgroundColor="Maroon">
				<BoxView BackgroundColor="Gray" AbsoluteLayout.LayoutBounds="0,0,1,100" AbsoluteLayout.LayoutFlags="XProportional,YProportional,WidthProportional" />
