<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataBindingDemos.RpnCalculatorPage"
             Title="RPN Calculator">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>



        <Label Text="{Binding Entry}"
               Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" />

        <Button Text="y&#x1D61;" Grid.Row="2" Grid.Column="0"
                Command="{Binding BinaryOperation}" CommandParameter="Math.Pow" />

        <Button Text="log" Grid.Row="2" Grid.Column="1"
                Command="{Binding UnaryOperation}" CommandParameter="Math.Log10" />

        <Button Text="ln" Grid.Row="2" Grid.Column="2"
                Command="{Binding UnaryOperation}" CommandParameter="Math.Log" />

        <Button Text="e&#x1D61;" Grid.Row="2" Grid.Column="3"
                Command="{Binding UnaryOperation}" CommandParameter="Math.Exp" />

        <Button Text="&#x221A;x" Grid.Row="3" Grid.Column="0"
                Command="{Binding UnaryOperation}" CommandParameter="Math.Sqrt" />

        <Button Text="sin" Grid.Row="3" Grid.Column="1"
                Command="{Binding UnaryOperation}" CommandParameter="Math.Sin" />


        <Button Text="7" Grid.Row="7" Grid.Column="0"
                Command="{Binding DigitEntry}" CommandParameter="7" />

        <Button Text="8" Grid.Row="7" Grid.Column="1"
                Command="{Binding DigitEntry}" CommandParameter="8" />
        
        <Button Text="9" Grid.Row="7" Grid.Column="2"
                Command="{Binding DigitEntry}" CommandParameter="9" />

        <Button Text="&#x00F7;" Grid.Row="7" Grid.Column="3"
                Command="{Binding BinaryOperation}" CommandParameter="/" />

        <Button Text="4" Grid.Row="8" Grid.Column="0"
                Command="{Binding DigitEntry}" CommandParameter="4" />
        
        <Button Text="5" Grid.Row="8" Grid.Column="1"
                Command="{Binding DigitEntry}" CommandParameter="5" />
        
        <Button Text="6" Grid.Row="8" Grid.Column="2"
                Command="{Binding DigitEntry}" CommandParameter="6" />

        <Button Text="&#x00D7;" Grid.Row="7" Grid.Column="3"
                Command="{Binding BinaryOperation}" CommandParameter="*" />

        <Button Text="1" Grid.Row="9" Grid.Column="0"
                Command="{Binding DigitEntry}" CommandParameter="1" />
        
        <Button Text="2" Grid.Row="9" Grid.Column="1"
                Command="{Binding DigitEntry}" CommandParameter="2" />
        
        <Button Text="3" Grid.Row="9" Grid.Column="2"
                Command="{Binding DigitEntry}" CommandParameter="3" />

        <Button Text="&#x2013;" Grid.Row="9" Grid.Column="3"
                Command="{Binding BinaryOperation}" CommandParameter="-" />

        <Button Text="0" Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2"
                Command="{Binding DigitEntry}" CommandParameter="0" />

        <Button Text="." Grid.Row="10" Grid.Column="2" />

        <Button Text="+" Grid.Row="10" Grid.Column="3"
                Command="{Binding BinaryOperation}" CommandParameter="+" />

    </Grid>
    
    
</ContentPage>