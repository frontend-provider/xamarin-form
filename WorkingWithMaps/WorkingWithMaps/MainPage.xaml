<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:WorkingWithMaps"
             mc:Ignorable="d"
             x:Class="WorkingWithMaps.MainPage"
             Title="Maps Table of Contents"
             Padding="10">

    <TableView Intent="Menu">
        <TableRoot>
            <TableSection>
                <ImageCell ImageSource="glyphish_74_location.png"
                           Text="Map demo"
                           Detail="Demonstrates the map control with zooming and map-types."
                           Command="{Binding NavigateCommand}"
                           CommandParameter="{x:Type local:MapPage}" />
                <ImageCell ImageSource="glyphish_07_map_marker.png"
                           Text="Pins demo"
                           Detail="Demonstrates the map control with map and pins created in code.."
                           Command="{Binding NavigateCommand}"
                           CommandParameter="{x:Type local:PinPage}" />
                <ImageCell ImageSource="glyphish_07_map_marker.png"
                           Text="Databinding pins demo"
                           Detail="Demonstrates the map control with map in XAML and databinding."
                           Command="{Binding NavigateCommand}"
                           CommandParameter="{x:Type local:PinItemsSourcePage}" />
                <ImageCell ImageSource="glyphish_13_target.png"
                           Text="Geocoder demo"
                           Detail="Demonstrates the geocoder class."
                           Command="{Binding NavigateCommand}"
                           CommandParameter="{x:Type local:GeocoderPage}" />
                <ImageCell ImageSource="glyphish_103_map.png"
                           Text="Native map app demo"
                           Detail="Demonstrates launching the platform's native map app."
                           Command="{Binding NavigateCommand}"
                           CommandParameter="{x:Type local:MapAppPage}" />
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>